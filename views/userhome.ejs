<script>

    function UserData() {
        let http = new XMLHttpRequest();
        http.onreadystatechange = function () {
            if (this.readyState === 4 && this.status === 200) {
                // console.log(JSON.parse(this.response));
                let data = JSON.parse(this.response);
                // console.log(this.response);

                let tableTag = '';
                data.forEach(function (value) {
                    tableTag += `  <div class=" card container-cards" style="display: inline-block;margin-right:1rem;max-width: 19rem;border-radius: 0.4rem;background-color: rgb(185 185 185 / 15%);">
                    <img src="../${value.image}" height=200px width="300px"  alt="..."
                        style="border-top-right-radius: 0.4rem;border-top-left-radius: 0.4rem;">
                    <div class="card-body pt-4 pb-4 ps-2 pe-2" >
                        <h5 class="card-title mb-3">${value.name}</h5>
                        <div class="lh-1 mt-2 mb-3 "><span class="mt-2.4 mb-2.4 text-dark rounded ps-0 pt-0.7 pb-0.7 pe-0.7">Product Status<span class="fw-bold" style="color: #1e78ff"> #${value.status}</span> </span>
                        </div>
                         <div class="lh-1 mt-2 mb-3"><span class="text-dark">Bid End's On: ${value.end_date}</span>
                        </div>
                           <div class="lh-1 mt-2 mb-3"><span class="text-dark">Max Bid: <span class="fw-bold" style="font-size: 22px;color: #279301;">&#8377;${value.price}</span></span>
                        </div>

                        <div class="pt-0 pb-0 ps-0 pe-0 mt-1 ml-2">
                            <div class="align-items-center g-0 row">
                            </div>
                            <div class="col col justify-content-center pr-2 pl-2 ">

                            <span><a href="#" class="btn btn-light mt-0 pt-2.8 pb-2.8" onclick="PlaceBid(${value.p_id})"
                                style="background-color:#2a2185;color:white;font-size: 1rem;border-radius: 3rem;width: 11.5rem">Bid Now</a></span>
                              <span class="text-warning me-3 mb-1">
                                </svg></span><span class="text-dark" style="font-size: 1.3rem"> 4.0</span><span class="fs-6 text-muted">
                                (<i class="fa-solid fa-eye"></i> ${value.p_id})</span>
                            </span>
                            </div></div></div></div>`
                });
                document.getElementById("photoView").innerHTML = tableTag;
            }
        }
        http.open("get", "/users/photoview", true);
        http.send();
    }


    function PlaceBid(p_id) {
        localStorage.setItem("pid", p_id);
        window.location.href = "/users/add-bid";
    }

    function winnerView() {
        var http = new XMLHttpRequest();
        http.onreadystatechange = function () {
            if (this.readyState === 4 && this.status === 200) {
                // console.log(JSON.parse(this.response));
                let data = JSON.parse(this.response);
                // console.log(this.response);
                let tableTag = '';
                data.forEach(function (value) {
                    tableTag += `  <div class="col-8 col-lg-6 col-md-6 col-sm-12 arrivals-card  col-xl-3 mb-2">
            <div class=" page-wrapper " style="padding: 0;width: 160px;">
                <div class="page-inner border-danger">

                    <div class="el-wrapper mx-auto px-auto">
                        <div class="box-up">
                            <img class="img" src="../${value.image}" height=295px width="270px" alt="">
                            <div class="img-info">
                                <div class="info-inner">
                                    <span class="p-name">${value.name}</span>
                                    <span class="p-company">THE REALIZATION OF AN IDEAL</span>
                                </div>
                            </div>
                        </div>

                        <div class="box-down">
                            <div class="h-bg">
                                <div class="h-bg-inner"></div>
                            </div>

                            <a class="cart" href="#">
                                <span class="price">${value.product_amount}</span>
                                <span class="add-to-cart">
                                        <span class="txt">Add in cart</span>
                                    </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>`
                });
                document.getElementById("wView").innerHTML = tableTag;
            }
        }
        http.open("get", "/users/WinnerView", true);
        http.send();
    }

</script>


