<!DOCTYPE html>
<html lang="">
<head>
    <title>Categories</title>
    <%- include('headerfiles') %>

    <style>
        .error {
            color: red;
        }

        body {
            font-family: 'Nunito', sans-serif;
            /*color: #384047;*/
        }


        .side-corner-tag {
            position: relative;
            color: white;
            display: inline-block;
            padding: 5px;
            overflow: hidden;
            font-weight: 700;
        }

        .side-corner-tag > p {
            display: inline;
        }

        .side-corner-tag > p > span {
            position: absolute;
            display: inline-block;
            right: -25px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2), inset 0px 5px 30px rgba(255, 255, 255, 0.2);
            text-align: center;
            text-transform: uppercase;
            top: 16px;
            background-color: #2a2185;
            width: 100px;
            padding: 3px -1px;
            -webkit-transform: rotate(45deg);
            -moz-transform: rotate(45deg);
            -o-transform: rotate(45deg);
            -ms-transform: rotate(45deg);
        }

        .side-corner-tag p:before {
            content: "";
            width: 0;
            height: 0;
            position: absolute;
            top: -17px;
            right: 69px;
            z-index: -1;
            border: 17px solid;
            border-color: transparent transparent #662121 transparent;
        }

        .side-corner-tag p:after {
            content: "";
            width: 0;
            height: 0;
            position: absolute;
            top: 74px;
            z-index: -1;
            right: -10px;
            border: 17px solid;
            border-color: #662121 transparent transparent transparent;
        }

    </style>
    <script>

    </script>
</head>
<!--onload="onloadData()"-->

<body>
<%- include('userheader') %>

<div class="container">
    <div class="container mt-5 mb-5">
        <div class="heading-8 text-start ">
            <h2 style="font-size: 4rem;color: #194681">Winners</h2>
            <p style="color: #194681" class="fw-normal">We proudly present our winners, these are people who visualized
                the reward of success...</p>
        </div>

    </div>
</div>
<% if(err) { %>
    <div class="text-center alert-danger p-5">
        <h4 class="">Internal Server Error.</h4>
        <h6 class="">No Data Found.</h6>
    </div>
<% } else { %>

    <% if(data.length === 0) { %>
        <div class="container">
            <div class="text-center alert-danger p-5">
                <h6 class="">No Data Found.</h6>
            </div>
        </div>
    <% } else { %>
        <% data.forEach((value) => { %>
            <div class="container-sm">
                <div class="container w-50 bg-primary">
                    <div class="row mt-4 bg-light border-bottom">
                        <div class="col-6  text-center" style="padding-top:0.9rem">
                            <div class="photo">
                                <div class="side-corner-tag">
                                    <img src="../<%= value.image%>" class="rounded" alt="" width="230px" height="230px">
                                    <p><span>${value.status}</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 justify-center  bg-light">
                            <div class="about-product mt-4">
                                <div class="row">
                                    <div class="col-3 profile-image px-0 mx-0">
                                        <img src="../<%= value.photo%>" alt="" width="70px" height="70px" class="rounded mx-0 px-0">
                                    </div>
                                    <div class="col align-baseline justify-start mt-1 px-0">
                           <span class="col profile-user-name ">
                               <h4><%= value.fullname%></h4>
                           </span>
                                    </div>
                                    <div class="max-bid text-dark mt-1 pt-1 px-1 rounded mt-2">
                                        <h3 class="fw-bold pt-1"><%= value.name%></h3>
                                    </div>
                                    <div class="max-bid text-dark mt-1 pt-1 px-1 rounded mt-2">
                                        <h5 class="">End Date: <%= value.end_date%></h5>
                                    </div>
                                    <div class="max-bid text-dark mt-1 pt-1 px-1 rounded mt-2">
                                        <h5 class="">Winning Bid: <%= value.product_amount%></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } %>
<% } %>



</body>
</html>